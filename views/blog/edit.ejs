<%- include("../partials/header") %>


<div class="container my-5">
  <div class="row justify-content-center align-items-center shadow-lg rounded-4 overflow-hidden"
    style="border: none;">
    
    <!-- Left: Form -->
    <div class="col-lg-6 p-5">
      <h2 class="mb-4 fw-bold text-center text-gradient"> Edit Blog</h2>
      <form action="/blog/<%= blog._id %>/edit" method="POST" enctype="multipart/form-data">

        <!-- Blog Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Blog Title</label>
          <input type="text" name="title" id="title" 
            class="form-control rounded-3 border-0 shadow-sm focus-ring" 
            value="<%= blog.title %>" required>
        </div>

        <!-- Blog Content -->
        <div class="mb-3">
          <label for="content" class="form-label fw-semibold">Blog Content</label>
          <textarea name="content" id="content" rows="6" 
            class="form-control rounded-3 border-0 shadow-sm focus-ring" 
            required><%= blog.content %></textarea>
        </div>

        <!-- Blog Image -->
        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Upload Blog Image</label>
          <% if (blog.image) { %>
            <div class="mb-2">
              <img src="<%= blog.image %>" alt="Blog Image" class="rounded-3 shadow-sm"
                style="max-width: 100%; height: auto; border: 2px solid #f1f1f1;">
            </div>
          <% } %>
          <input type="file" name="image" id="image" 
            class="form-control rounded-3 border-0 shadow-sm" accept="image/*">
        </div>

        <!-- Author Name -->
        <div class="mb-3">
          <label for="authorName" class="form-label fw-semibold">Your Name</label>
          <input type="text" name="authorName" id="authorName" 
            class="form-control rounded-3 border-0 shadow-sm" 
            value="<%= blog.authorName || '' %>">
        </div>

        <!-- Author Profile Image -->
        <div class="mb-3">
          <label for="authorImage" class="form-label fw-semibold">Profile Image</label>
          <% if (blog.authorImage) { %>
            <div class="mb-2">
              <img src="<%= blog.authorImage %>" alt="Profile Image" 
                class="rounded-circle shadow-sm border" width="60" height="60">
            </div>
          <% } %>
          <input type="file" name="authorImage" id="authorImage" 
            class="form-control rounded-3 border-0 shadow-sm" accept="image/*">
        </div>

        <!-- Submit Button -->
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-warning rounded-3 shadow py-2 fw-semibold hover-animate">
            Update Blog
          </button>
        </div>
      </form>
    </div>

    <!-- Right: Background / Illustration -->
    <!-- <div class="col-lg-6 d-none d-lg-block bg-light"
      style="background: url('/images/editform.png') center/cover no-repeat; min-height: 00px;">
    </div> -->
  </div>
</div>


<%- include("../partials/footer") %>
