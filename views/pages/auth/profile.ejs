<%- include("../../partials/header") %>

<div class="container py-5" style="max-width: 1000px;">

  <!-- Profile Card -->
 <div class=" text-start">
    <a href="/home" class="btn btn-outline-dark px-4 mb-3">‚Üê Back</a>
  </div>

  <div class="card  border-0 rounded-4 mb-5" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
    <div class="card-body d-flex align-items-center">
      <div class="me-4">
        <img src="<%= user.avatar || '/images/default-user.png' %>" 
             class="rounded-circle border shadow-sm" 
             alt="Avatar" width="50" height="50">
      </div>
      <div>
        <h6 class="fw-bold mb-1"><%= user.fullName %></h6>
        <p class="text-muted mb-1"><i class="bi bi-envelope me-2"></i> <%= user.email %></p>
        <p class="text-muted mb-0"><i class="bi bi-calendar me-2"></i> Joined: <%= new Date(user.createdAt).toLocaleDateString() %></p>
      </div>
    </div>
  </div>

  <!-- Blog List -->
  <div class="card  border-0 rounded-4" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
    <div class="card-header bg-primary text-white rounded-top-4">
      <h5 class="mb-0 fw-semibold">Your Blogs</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 50%;">Title</th>
              <th style="width: 20%;">Created At</th>
              <th style="width: 30%;" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (myBlogs && myBlogs.length > 0) { %>
              <% myBlogs.forEach(b => { %>
                <tr>
                  <td>
                    <a href="/blog/<%= b._id %>" class="fw-semibold text-decoration-none text-dark">
                      <i class="bi bi-journal-text me-2 text-primary"></i> <%= b.title %>
                    </a>
                  </td>
                  <td><%= new Date(b.createdAt).toLocaleDateString() %></td>
                  <td class="text-center">
                    <a href="/blog/<%= b._id %>/edit" 
                       class="btn btn-sm btn-outline-primary me-2 px-3">Edit</a>
                    <form action="/blog/<%= b._id %>/delete" method="POST" class="d-inline">
                      <button type="submit" 
                              class="btn btn-sm btn-outline-danger px-3"
                              onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-muted text-center py-4">No blogs found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  <!-- Back Button -->
 
</div>

<style>
  body{
    background: #cfe2ff;;
  }
</style>
<%- include("../../partials/footer") %>
