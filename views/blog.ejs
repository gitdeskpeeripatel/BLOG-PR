<%- include("partials/header") %>

<!-- Hero Section -->
<section class="py-5 text-center bg-light border-bottom">
  <div class="container">
    <span class="badge bg-white text-dark border shadow-sm mb-3 px-3 py-2">Blog</span>
    <h1 class="fw-bold display-5">Blog</h1>
          <p class="lead text-muted ">Our latest news, updates, and stories for developers</p>

    <!-- Search -->
    <div class="d-flex justify-content-center mb-4">
      <input id="searchInput" type="text" class="form-control w-50 me-2 rounded-pill shadow-sm px-3" placeholder="Search blogs...">
      <button id="searchBtn" class="btn btn-primary rounded-pill px-4 shadow-sm">Find Now</button>
    </div>

    <!-- Search Results -->
    <div id="searchResults" class="mt-4"></div>
  </div>
</section>

<!-- Blog Cards -->
<section class="container my-5">
  <div class="row g-4">
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card border-0 shadow-lg h-100 rounded-4 overflow-hidden transition">
            
            <% if (blog.image) { %>
              <img src="<%= blog.image %>" class="card-img-top" alt="Blog Image" style="height: 220px; object-fit: cover;">
            <% } else { %>
              <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 220px;">
                <span class="fs-5">No Image</span>
              </div>
            <% } %>

            <div class="card-body d-flex flex-column">
              <h5 class="fw-bold mb-2"><%= blog.title %></h5>
              <p class="text-muted flex-grow-1"><%= blog.content.substring(0, 120) %>...</p>
              <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm mt-auto rounded-pill px-3">Read More</a>
            </div>

            <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center px-3 py-2">
              <!-- Like Button -->
              <form action="/blog/<%= blog._id %>/like" method="POST" class="m-0">
                <button type="submit" class="btn btn-sm btn-light border rounded-pill px-3 shadow-sm">
                  ‚ù§Ô∏è <%= blog.likes || 0 %>
                </button>
              </form>
              <!-- Comment Count -->
              <span class="text-muted small">üí¨ <%= blog.comments ? blog.comments.length : 0 %></span>
            </div>

          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center text-muted">
        <p>No blogs available. <a href="/blog/add" class="text-decoration-none fw-semibold">Add one now</a>.</p>
      </div>
    <% } %>
  </div>
</section>

<%- include("partials/footer") %>

<!-- Search Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchBtn = document.getElementById("searchBtn");
    const searchInput = document.getElementById("searchInput");
    const searchResults = document.getElementById("searchResults");

    searchBtn.addEventListener("click", async () => {
      const query = searchInput.value.trim();
      if (!query) {
        alert("Please enter a search term!");
        return;
      }

      try {
        const res = await fetch(`/blog/search?query=${encodeURIComponent(query)}`);
        const data = await res.json();

        if (data.length === 0) {
          searchResults.innerHTML = `<p class="text-muted">No blogs found for "<strong>${query}</strong>".</p>`;
          return;
        }

        searchResults.innerHTML = data.map(blog => `
          <div class="card mb-3 shadow-sm border-0 rounded-3">
            <div class="card-body">
              <h5 class="card-title fw-bold">${blog.title}</h5>
              <p class="card-text text-muted">${blog.content.substring(0, 100)}...</p>
              <a href="/blog/${blog._id}" class="btn btn-sm btn-outline-primary rounded-pill px-3">Read More</a>
            </div>
          </div>
        `).join("");
      } catch (err) {
        console.error(err);
        searchResults.innerHTML = `<p class="text-danger">Error fetching blogs.</p>`;
      }
    });
  });
</script>
